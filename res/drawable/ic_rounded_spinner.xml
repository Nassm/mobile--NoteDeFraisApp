<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <item>
                <shape>
                    <gradient
                        android:startColor="@color/prismaColorPrimaryLight"
                        android:endColor="@color/prismaColorPrimaryLight"
                        android:angle="270" />
                    <stroke
                        android:width="1dp"
                        android:color="@color/prismaColorPrimary" />
                    <corners
                        android:radius="15dp" />
                    <padding
                        android:left="1dp"
                        android:top="1dp"
                        android:right="1dp"
                        android:bottom="1dp" />
                </shape>
            </item>
            <item
                android:top="12dp"
                android:right="15dp">
                <bitmap android:src="@drawable/ic_arrow"
                    android:gravity="top|right" />
            </item>
        </layer-list>
    </item>


</selector>